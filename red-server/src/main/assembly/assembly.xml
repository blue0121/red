<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/3.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/3.0.0 http://maven.apache.org/xsd/assembly-3.0.0.xsd">
	
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<!-- dependency jar -->
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>${file.separator}lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	
	<!-- other files -->
	<fileSets>
		<fileSet>
			<directory>${project.build.outputDirectory}/</directory>
			<outputDirectory>${file.separator}</outputDirectory>
			<includes>
				<include>*.xml</include>
				<include>*.properties</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/</directory>
			<outputDirectory>${file.separator}</outputDirectory>
			<includes>
				<include>${project.build.finalName}.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>${file.separator}</outputDirectory>
			<includes>
				<include>*.sh</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
	</fileSets>

</assembly>